/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Inc16(in=out2, out=outinc1);
    Mux16(a=in, b=outinc1, sel=inc, out=plus1orin);
    Mux16(a=plus1orin, b=in, sel=load, out=outload);
    Mux16(a=outload, b[0..15]=false, sel=reset, out=output);
    Register(in=output, load=true, out=out,out=out2);
}